package recursion;

public class RecursionDemo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	
	public static boolean isPal(String s) { 
		if (s.length() <= 1 ) return false;
		int n = s.length()-1;
		// s[0] + s[1..n-1] + s[n] 
		
		s.charAt(0) == s.charAt(n);
		
		
	}

}
