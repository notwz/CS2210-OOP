	 class Widget {
	    private final int x;
	    private final int y;
	    /** true when important data is stored only in x, 
	      * false when it is stored only in y. */
	    private final boolean usesX;
	    public boolean equals(Object ob) {
	        if (ob == null || getClass() != ob.getClass()) return false;
	        Widget w= (Widget)ob;
	        if (usesX) { return this.x == w.x; }
	        else { return this.y == w.y; }
	    }
	}

}
